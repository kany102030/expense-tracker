<header>
  <nav>
    <div class="nav-area">
      <a href="/" class="nav-title">家庭記帳本</a>
      <a href="/users/logout" class="btn-logout">登出</a>
    </div>
  </nav>
</header>
<div class="container m-auto">
  <form class="mt-3" action="/records/{{record._id}}?_method=PUT" method="post">
    <div class="wrapper">
      <p>*必填欄位</p>
      <p class="w-80 m-auto">請輸入你的支出</p>

      <label for="record_name">名稱*:</label>
      <input value="{{record.name}}" class="h-100" type="text" name="record_name" id="record_name" required>

      <label for="record_date">日期*:</label>
      <input value="{{record.date}}" class="record-date h-100" type="date" name="record_date" id="record_date">

      <label for="record_category">類別*:</label>
      <select class="h-100" name="record_category" id="record_category">
        <option value="{{categorySelected._id}}">{{categorySelected.name}}</option>
        {{#each categoriesOther}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
      </select>

      <label for="record_price">金額*:</label>
      <input value="{{record.amount}}" class="h-100 input-item" type="number" name="record_price" id="record_price"
        required>

      <div></div>
      <button type="submit" class="btn btn-primary h-100">送出</button>
    </div>
  </form>
</div>

{{#each scripts}}
<script src="{{this}}"></script>
{{/each}}