<header>
  <nav>
    <div class="nav-area">
      <a href="/" class="nav-title">家庭記帳本</a>
      <div>
        <a href="/records/new" class="btn-new">新增帳目</a>
        <a href="/users/logout" class="btn-logout">登出</a>
      </div>
    </div>
  </nav>
</header>
<div class="container m-auto">
  <form class="mt-3" action="/records/{{record._id}}?_method=PUT" method="post">
    <div class="wrapper">
      <p>*必填欄位</p>
      <p class="w-80 m-auto">請輸入你的支出</p>

      <label for="name">名稱*:</label>
      <input value="{{record.name}}" class="h-100" type="text" name="name" id="name" required>

      <label for="date">日期*:</label>
      <input value="{{record.date}}" class="record-date h-100" type="date" name="date" id="date">

      <label for="categoryId">類別*:</label>
      <select class="h-100" name="categoryId" id="categoryId">
        {{#each categories}}
        <option value="{{this._id}}" {{#ifEquals this.name ../record.categoryId.name}}selected{{/ifEquals}}>{{this.name}}</option>
        {{/each}}
      </select>

      <label for="amount">金額*:</label>
      <input value="{{record.amount}}" class="h-100 input-item" type="number" name="amount" id="amount" required>

      <div></div>
      <button type="submit" class="btn btn-primary h-100">送出</button>
    </div>
  </form>
</div>

{{#each scripts}}
<script src="{{this}}"></script>
{{/each}}